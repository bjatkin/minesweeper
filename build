#!/bin/bash

echo building for mac...
GOOS=darwin GOARCH=amd64 go build -o dist/mac/ready\ set\ duck.app/Contents/MacOS/ready\ set\ duck
echo building for windows...
GOOS=windows GOARCH=amd64 go generate
GOOS=windows GOARCH=amd64 go build -ldflags="-H windowsgui" -o dist/windows/ready\ set\ duck.exe
echo cleanup...
rm resource.syso